<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <TextView
        android:id="@+id/tvElementNumber"
        style="@style/FuenteBaseItemChick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Elemento Numero N" />

    <ImageView
        android:id="@+id/ivImagePreview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvElementNumber"
        tools:background="@color/primary_background" />

    <ImageView
        android:id="@+id/ivSelectImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_add_image"
        app:layout_constraintBottom_toTopOf="@id/ivDeleteItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivImagePreview"
        app:layout_constraintTop_toBottomOf="@id/tvElementNumber"
        app:tint="@color/primary_background" />

    <ImageView
        android:id="@+id/ivDeleteItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivImagePreview"
        app:layout_constraintTop_toBottomOf="@id/ivSelectImage"
        app:tint="@color/primary_background" />


</androidx.constraintlayout.widget.ConstraintLayout>